// This is a comment

{
   let add_ints a b = a + b;;
}

Program   -> "start" Statement* "end" eof { Program($P,$2) } ;

Statement -> Expr ';' { $1 } ;

Expr      -> Integer       { $1 }
           | Expr "+" Expr { add_ints $1 $3 } ;

Integer -> '0'            { 0 }
         | ([1-9] [0-9]*) { int_of_string $1 } ;


SingleComm -> "//" [^\n]*  {} ;  /* throw away single-line comments */
MultiComm  -> "/*" .. "*/" {} ;  /* throw away recursive multiline comments */
